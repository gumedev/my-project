{
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "extends": [
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
	"bracketSpacing": false,
	"arrowParens": "always",
        "singleQuote": true,
	"printWidth": 100,
        "semi": true
      }
    ]
  }
}
